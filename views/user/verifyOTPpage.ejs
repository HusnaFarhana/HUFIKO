<%-include('../layouts/header.ejs') -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Log In</title>
    <link rel="stylesheet" href="assets">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

</head>
<body>
<style>
  body{
    background-image: url(assets/login.jpg);
  }

</style>

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-transparent text-secondary shadow-lg" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Verify OTP</h2>
              <p class="text-secondary-50 mb-5">Enter OTP</p>


              <form action="" method="POST">
              <div class="form-outline form-white mb-4">
                <input type="text" id="typeNumX" class="form-control form-control-lg" placeholder="Enter OTP" name="otp"/>
                <br>
                <br>
              <%
              if(typeof message !=='undefined'){
          
           %>
           <h4><%= message %></h4>
          
          
           <% } %>

              <button class="btn btn-outline-dark btn-lg px-5" type="submit">Verify OTP</button>
            </form>
            </div>

              <a href="/">Back Home</a>
          
          

          </div>
        </div>
      </div>
    </div>
  </div>
</section>



</body>
</html>
      function validate(){
         var code = document.getElementById("code").value;
         var discount = document.getElementById("discount").value;
         var minam = document.getElementById("minam").value;
         var maxuser = document.getElementById("maxuser").value;
         let specialCharacters = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/;

         if (code.trim() == "") {
          document.getElementById("lblcode").style.visibility = "visible";
          return false;
        } else if (code.trim() !== "") {
          document.getElementById("lblcode").style.visibility = "hidden";
        }

          if (code.length<5) {
          document.getElementById("lblcode").style.visibility = "visible";
          return false;
        } else if (code.length==5) {
          document.getElementById("lblcode").style.visibility = "hidden";
        }
        
        if(specialCharacters.test(code)){
          document.getElementById("lblcode").style.visibility = "visible";
          return false
        }else{
            document.getElementById("lblcode").style.visibility = "hidden";
        }

         if (discount<1) {
          document.getElementById("lbldiscount").style.visibility = "visible";
          return false;
        } else if (discount>0) {
          document.getElementById("lbldiscount").style.visibility = "hidden";
        }

         if (minam<1) {
          document.getElementById("lblprice").style.visibility = "visible";
          return false;
        } else if (minam>0) {
          document.getElementById("lblprice").style.visibility = "hidden";
        }
         if (maxuser<1) {
          document.getElementById("lblmax").style.visibility = "visible";
          return false;
        } else if (maxuser>0) {
          document.getElementById("lblmax").style.visibility = "hidden";
        }

    }     
    </script>

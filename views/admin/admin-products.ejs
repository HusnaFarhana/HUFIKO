                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
               
                <div class="navbar-nav align-items-center ms-auto">
                
                   
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <span class="d-none d-lg-inline-flex">Admin</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a href="/admin/admin-logout" class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            <div class="table-responsive ">
                <div class="container-fluid pt-4 px-4 ">
                    <div class="row g-4 ">
                        <div class="col-sm-12 col-xl-12">
                            <div class=" rounded h-100 p-4">
                                <h4 class="mb-4">Products</h4>
                                <a href="/admin/add-product"><button class="btn btn-outline-dark">Add Product</button></a>
                                <br><br>
                                <table class="table bg-light" id="productsTable">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Stock</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Edit</th>
                                            <th scope="col">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach(function(product,index){%>
                                            <tr>
                                                <td scope="row"><%=index+1 %></td>
                                                <td><%= product.productname %></td>            
                                                <td><img src="product-images/<%= product.image[0] %>" width="100px" height="120px" alt="<%= product.image %>">
                                                </td>
                                                <td><%= product.category %></td>
                                                <td><%= product.price %></td>
                                                <td><%= product.stock%></td>
                                                <td><%= product.status%></td>
                                                <td><%= product.description%></td>
                                                <td><a href="/admin/edit-product?id=<%= product._id %>"><button class="btn btn-danger">Edit</button></a></td>
                                                
                                                <td>
                                                     <% if(product.deleted=="true"){%>
                                                        <button role="button" onclick="deletepro('<%= product._id %>')" class="btn btn-outline-primary" >Restore</button>
                                                     <!-- <a href="/admin/delete-product?id=<%= product._id %>"><button class="btn btn-success" onclick=" deleteconfirm(this)">Restore</button></a></td> -->
                                                 <%}else{%>
                                                    <!-- <a href="/admin/delete-product?id=<%= product._id %>"><button class="btn btn-danger" onclick=" deleteconfirm(this)">Delete</button></a></td> -->
                                                    <button role="button" onclick="deletepro('<%= product._id %>')" class="btn btn-outline-danger" >Delete</button>

                                                     <%}%> 
                                                     <script>
                                                         function deletepro(proid){
                                                            $.ajax({
                                                            url:'/admin/delete-product',
                                                            data:{
                                                                id:proid
                                                            },
                                                            method:'post',
                                                            encoded:true,
                                                            
                                                            }).done((data)=>{
                                                            console.log(data);
                                                            if (data.success) {
                                                            
                                                            window.location.reload()
                                                            }
                                                        });
                                                        
                                                        }
                                                     </script>
                                            </tr>
                                        <%})%>
                                        
                                    </tbody>
                                    
                                </table>
                            </div>
                        </div>
    
    
                    </div>
                </div>
            </div>
           

            



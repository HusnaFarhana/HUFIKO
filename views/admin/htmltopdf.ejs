<h2>Sales Report</h2>
<table id="salesRep" class="display nowrap" style="width: 100%">
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>Order ID</th>
      <th>Payment</th>
      <th>Status</th>
      <th>Date</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(function(order,index){%>
    <tr>
      <td><%= order.userId%></td>
      <td><%= order._id%></td>
      <td><%= order.paymentMethod%></td>
      <td><%= order.status%></td>
      <td><%= order.Date.toISOString().substring(0,10) %></td>
      <td><%= order.totalAmount %></td>
    </tr>
    <% }) %>
  </tbody>
</table>
